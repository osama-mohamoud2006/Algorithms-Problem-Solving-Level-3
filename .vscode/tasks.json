{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile current C++ file with g++"
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "dependsOn": "Build C++ (g++)",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
